# Build the docker image with `npx nx docker-build notification`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t notification`.
FROM node:21-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

COPY dist/apps/notification notification
COPY package*.json ./
COPY /apps/notification/prisma prisma

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm install

RUN npx prisma generate
CMD [ "node", "notification" ]
